{
  "name": "altr",
  "version": "0.4.0-alpha-4",
  "description": "README.md",
  "main": "./lib/index.js",
  "scripts": {
    "test": "node test | faucet && browserify test -d | jsdom-eval | faucet",
    "build": "mkdir -p dist; npm run build-debug; npm run build-min",
    "build-debug": "browserify lib/browser.js --debug -x ./node_modules/micro-dom > dist/altr.js",
    "build-min": "browserify lib/browser.js --debug -x ./node_modules/micro-dom -p [minifyify --output dist/altr.min.map --map altr.min.map] > dist/altr.min.js",
    "docs": "cd docs && hugo server --watch --buildDrafts",
    "docs-win": ".\\docs\\hugo.exe server --watch --buildDrafts"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/hayes/altr"
  },
  "author": "Michael Hayes",
  "license": "MIT",
  "dependencies": {
    "batch-queue": "0.0.2",
    "dirtybit": "^0.1.1",
    "extend": "^1.3.0",
    "faucet": "0.0.1",
    "jsdom-eval": "0.0.7",
    "micro-dom": "0.0.17",
    "tape": "^3.0.0"
  },
  "devDependencies": {
    "altr-ease": "0.0.3",
    "altr-scale": "0.0.0",
    "browserify": "^4.1.11",
    "concat-stream": "1.4.4",
    "ease-component": "1.0.0",
    "exorcist": "0.1.5",
    "highlight.js": "8.0.0",
    "marked": "0.3.2",
    "minifyify": "^3.0.9",
    "tape": "2.12.3"
  },
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/hayes/altr/issues"
  }
}
